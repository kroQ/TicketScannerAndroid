<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress_reg"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_name_register"
        android:layout_alignStart="@+id/et_name_register"
        android:layout_marginBottom="-60dp"
        android:text="@string/nameS"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/et_name_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:theme="@style/Theme.App.Base" />

    <TextView
        android:id="@+id/surname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_surname_register"
        android:layout_alignStart="@+id/name_text"
        android:layout_marginBottom="-20dp"
        android:text="@string/surnameS"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/et_surname_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_name_register"
        android:layout_alignStart="@+id/et_name_register"
        android:layout_below="@+id/et_name_register"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/surname"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:theme="@style/Theme.App.Base" />

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_login_register"
        android:layout_alignStart="@+id/name_text"
        android:layout_marginBottom="-20dp"
        android:text="@string/loginS"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/et_login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_surname_register"
        android:layout_alignRight="@+id/et_surname_register"
        android:layout_below="@+id/et_surname_register"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/login"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:theme="@style/Theme.App.Base" />

    <TextView
        android:id="@+id/email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_email_register"
        android:layout_alignStart="@+id/name_text"
        android:layout_marginBottom="-20dp"
        android:text="@string/emailS"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/et_email_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_login_register"
        android:layout_alignStart="@+id/et_login_register"
        android:layout_below="@+id/et_login_register"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:theme="@style/Theme.App.Base" />

    <TextView
        android:id="@+id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_password_register"
        android:layout_alignStart="@+id/name_text"
        android:layout_marginBottom="-20dp"
        android:text="@string/passwordS"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/et_password_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_email_register"
        android:layout_alignStart="@+id/et_email_register"
        android:layout_below="@+id/et_email_register"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:theme="@style/Theme.App.Base" />

    <TextView
        android:id="@+id/repeat_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_repeat_password"
        android:layout_alignStart="@+id/name_text"
        android:layout_marginBottom="-20dp"
        android:text="@string/repeat_passwordS"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/et_repeat_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_password_register"
        android:layout_alignStart="@+id/et_password_register"
        android:layout_below="@+id/et_password_register"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/repeat_password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:theme="@style/Theme.App.Base" />

    <Button
        android:id="@+id/bt_sign_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_repeat_password"
        android:layout_alignLeft="@+id/et_repeat_password"
        android:layout_alignRight="@+id/et_repeat_password"
        android:layout_alignStart="@+id/et_repeat_password"
        android:layout_below="@+id/et_repeat_password"
        android:layout_marginTop="50dp"
        android:text="@string/sing_on"
        android:theme="@style/AppTheme.Button" />
</RelativeLayout>
